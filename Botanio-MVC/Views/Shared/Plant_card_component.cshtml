@model Botanio_MVC.Models.Domain.Plant


<div class="container py-5" style="height: 100%">
    <div class="card card-custom" >
        <img src="/img/@Model.ImageUrl" class="card-img-top" alt="Plant Image" style="border-radius: 1rem;">
        <div class="card-body card-body-custom">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="card-footer card-footer-custom">
            <a href="@Model.PlantId" class="plant-card-button">More info</a>
        </div>
    </div>
</div>